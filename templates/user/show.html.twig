{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1 class="mb-4">Utilisateur: {{ user.email }}</h1>

    <div class="card shadow-sm mb-4">
        <div class="card-header">
            Détails de l'utilisateur
        </div>
        <div class="card-body">
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><strong>ID:</strong> {{ user.id }}</li>
                <li class="list-group-item"><strong>Email:</strong> {{ user.email }}</li>
                <li class="list-group-item"><strong>Roles:</strong>
                    {% for role in user.roles %}
                        <span class="badge bg-info me-1">{{ role }}</span>
                    {% endfor %}
                </li>
                <li class="list-group-item"><strong>Vérifié:</strong> {{ user.isVerified ? '<span class="badge bg-success">Oui</span>' : '<span class="badge bg-danger">Non</span>' }}</li>
            </ul>
        </div>
    </div>

    <div class="mt-3">
        <a href="{{ path('app_user_index') }}" class="btn btn-secondary me-2">Retour à la liste</a>
        {{ include('user/_delete_form.html.twig') }}
    </div>
{% endblock %}
