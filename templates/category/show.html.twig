{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
<main>
    <section class="container mt-4">
        <h1 class="mb-4 text-center">Catégorie: {{ category.name }}</h1>

        <div class="card shadow-sm mb-4">
            <div class="card-header">
                Détails de la Catégorie
            </div>
            <div class="card-body">
                <p class="card-text"><strong>Description:</strong> {{ category.description }}</p>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><strong>ID:</strong> {{ category.id }}</li>
                    <li class="list-group-item"><strong>Slug:</strong> {{ category.slug }}</li>
                </ul>
            </div>
        </div>

        <div class="mt-3 d-flex justify-content-between align-items-center">
            <a href="{{ path('app_category_index') }}" class="btn btn-secondary">Retour à la liste</a>
            <div>{# Wrap action buttons in a div for alignment #}
                <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-warning me-2">Modifier</a>
                {{ include('category/_delete_form.html.twig') }}
            </div>
        </div>
    </section>
</main>
{% endblock %}
