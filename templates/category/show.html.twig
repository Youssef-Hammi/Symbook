{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1 class="mb-4">Catégorie: {{ category.name }}</h1>

    <div class="card shadow-sm mb-4">
        <div class="card-header">
            Détails de la Catégorie
        </div>
        <div class="card-body">
            <p class="card-text"><strong>Description:</strong> {{ category.description }}</p>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><strong>ID:</strong> {{ category.id }}</li>
                <li class="list-group-item"><strong>Slug:</strong> {{ category.slug }}</li>
            </ul>
        </div>
    </div>

    <div class="mt-3">
        <a href="{{ path('app_category_index') }}" class="btn btn-secondary me-2">Retour à la liste</a>
        <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-warning me-2">Modifier</a>
        {{ include('category/_delete_form.html.twig') }}
    </div>
{% endblock %}
